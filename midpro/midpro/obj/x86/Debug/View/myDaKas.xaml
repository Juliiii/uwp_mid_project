<Page x:ConnectionId='1'
    x:Class="midpro.myDaKas"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:midpro"
    xmlns:md="using:midpro.Model"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="40"></RowDefinition>
            <RowDefinition Height="130"></RowDefinition>
            <RowDefinition Height="30"></RowDefinition>
            <RowDefinition Height="5"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0" Background="BlueViolet">
            <Button x:ConnectionId='8' FontFamily="Segoe MDL2 Assets" 
                    Content="&#xE830;" 
                    VerticalAlignment="Top" 
                    Width="40" 
                    Height="40"
                    Background="BlueViolet"
                    Foreground="White"
                                      
                    x:Name="Back"/>
            <TextBlock Text="我的打卡" VerticalAlignment="Center" TextAlignment="Center" FontSize="20" Foreground="White" Margin="50, 0, 50, 0"/>
        </Grid>
        <Grid Grid.Row="1">
            <Rectangle Width="90" Height="90" Margin="20,0,0,0" HorizontalAlignment="Left">
                <Rectangle.Fill>
                    <ImageBrush x:ConnectionId='7' x:Name="avatar" ImageSource="http://okuww23ih.bkt.clouddn.com/1"/>
                </Rectangle.Fill>
            </Rectangle>
            <TextBlock x:ConnectionId='6' Text="1111"
                       x:Name="nickname"
                       Foreground="Black" 
                       FontSize="20"
                       Margin="130, 0, 0, 0"
                       VerticalAlignment="Center"/>
        </Grid>
        <TextBlock Grid.Row="2" Text="Records" Margin="10,0,0,0" FontSize="20" FontWeight="Bold"/>
        <Line Grid.Row="3" Stretch="Fill" Stroke="BlueViolet" StrokeThickness="2" X1="1" VerticalAlignment="Center" HorizontalAlignment="Stretch" Margin="0,0,0,0"/>
        <Grid Grid.Row="4">
            <ScrollViewer>
                <ListView x:ConnectionId='2'                                   IsItemClickEnabled="True"                               >
                    <ListView.ItemTemplate>
                        <DataTemplate                     >
                            <Grid x:ConnectionId='3' Margin="10,20,0,10">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="1*"/>
                                    <ColumnDefinition Width="220"/>
                                    <ColumnDefinition Width="1*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock x:ConnectionId='4'                             
                                            Foreground="Gray" 
                                            FontSize="14"
                                            VerticalAlignment="Center"
                                            HorizontalAlignment="Right"
                                            Margin="0, 0, 0, 0"
                                            Grid.Column="0"/>
                                <TextBlock Text="打卡了" 
                                            Foreground="Black" 
                                            FontSize="16"
                                            VerticalAlignment="Center"
                                            Margin="20, 0, 0, 0"
                                            Grid.Column="1"/>
                                <AppBarButton Grid.Column="2" Icon="Setting" IsCompact="True" VerticalAlignment="Center" RenderTransformOrigin="0,0">
                                    <AppBarButton.Flyout>
                                        <MenuFlyout>
                                            <MenuFlyoutItem x:ConnectionId='5' Text="share"                              HorizontalAlignment="Center"/>
                                        </MenuFlyout>
                                    </AppBarButton.Flyout>
                                </AppBarButton>
                            </Grid>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </ScrollViewer>
        </Grid>
    </Grid>
</Page>

